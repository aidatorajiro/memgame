#:kivy 1.0.9
#:import V kivy.vector

<Character>:
    size: 5, 5

    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size

<TranslateHack>:
    size: 0, 0
    canvas:
        Translate:
            xy: self.pos

<ProcessSelect>:
    size: 0, 0

<Footprints>:
    size: 0, 0

<MemGame>:
    message: message
    chara: character
    select: process_select
    footprints: footprints

    Message:
        id: message
        center: self.parent.center

    Character:
        id: character
        center: self.parent.center

    TranslateHack:
        center: self.parent.center
        pos: self.parent.chara.pos[0] - self.parent.chara.coordinate[0], self.parent.chara.pos[1] - self.parent.chara.coordinate[1]

    Footprints:
        id: footprints
        center: self.parent.center

    ProcessSelect:
        id: process_select
        center: self.parent.center
