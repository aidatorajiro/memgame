#:kivy 1.0.9
#:import ew kivy.uix.effectwidget

<Character>:
    size: 5, 5
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size

<ProcessSelect>:
    size: 16, 16
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<MemGame>:
    chara: character
    select: process_select
    
    Character:
        id: character
        center: self.parent.center
    
    ProcessSelect:
        id: process_select
        center: self.parent.center