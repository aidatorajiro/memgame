#:kivy 1.0.9
#:import ew kivy.uix.effectwidget

<Character>:
    size: 5, 5
    
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size

<Footprints>:
    size: 0, 0
    canvas:
        Translate:
            xy: self.pos

<ProcessSelect>:
    size: 0, 0

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: 16, 16

<MemGame>:
    chara: character
    select: process_select
    footprints: footprints
    
    Character:
        id: character
        center: self.parent.center
    
    ProcessSelect:
        id: process_select
        center: self.parent.center
    
    Footprints:
        id: footprints
        center: self.parent.center