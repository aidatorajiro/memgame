#:kivy 1.0.9
#:import V kivy.vector

<Character>:
    size: 5, 5
    
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size

<Footprints>:
    size: 0, 0

<ProcessSelect>:
    size: 0, 0

<MemGame>:
    chara: character
    select: process_select
    footprints: footprints
    
    Character:
        id: character
        center: self.parent.center
    
    ProcessSelect:
        id: process_select
        center: self.parent.center
        pos: V.Vector(*self.parent.chara.pos) - self.parent.chara.coordinate
    
    Footprints:
        id: footprints
        center: self.parent.center
        pos: V.Vector(*self.parent.chara.pos) - self.parent.chara.coordinate